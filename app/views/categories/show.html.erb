<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @category.name %>
</p>
<%= link_to 'Edit', edit_category_path(@category) %> | <%= link_to 'Back', categories_path %>
<br>

<h4>Subcategories</h4>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.name %></td>
        <td><%= link_to 'Edit', edit_category_subcategory_path(@category, subcategory) %></td>
        <td><%= link_to 'Destroy', [@category, subcategory], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

 <%= link_to "New Subcategory", new_category_subcategory_path(@category), class: "new" %>

